<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".dashboard">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/white"
        app:title="maid monitor"
        >

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="350dp"
            android:src="@drawable/logooo"
            android:layout_alignTop="@id/imageView"
            android:layout_alignBottom="@id/imageView"
            android:layout_alignLeft="@id/imageView"
            android:layout_alignRight="@id/imageView"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="420dp"
        android:layout_height="1000dp"
        android:layout_marginTop="56dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bggg" />


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="140dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


        <ImageView
            android:layout_width="180dp"
            android:layout_height="77dp"
            android:layout_gravity="center"
            android:src="@drawable/sp"
            android:id="@+id/sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="110dp"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="140dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <ImageView
            android:layout_width="175dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:src="@drawable/co1"
            android:id="@+id/si"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experiment"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="110dp"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            />

    </androidx.cardview.widget.CardView>


</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="340dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


        <ImageView
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/di"
            android:id="@+id/di"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ISL dictionary"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="110dp"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="340dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


        <ImageView
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/si"
            android:id="@+id/re"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign to text"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="110dp"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            />
    </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navmenu"
        app:menu="@menu/nav_door"
        app:headerLayout="@layout/header"
        android:layout_gravity="start"/>



</androidx.drawerlayout.widget.DrawerLayout>